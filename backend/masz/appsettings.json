{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=myServerAddress;Database=myDataBase;Uid=myUsername;Pwd=myPassword;"
  },
  "AppSettings": {
    "Token": "dummyvalue"
  },
  "AllowedHosts": "*",
  "InternalConfig": {
    "DiscordBotToken": "",
    "Version": "1.0.0",
    "DiscordClientId": "",
    "DiscordClientSecret": "",
    "SiteAdminDiscordUserIds": [],
    "ServiceHostName": "",
    "ServiceBaseUrl": "",
    "AbsolutePathToFileUpload": "/filehost/"
  },
  "IpRateLimiting": {
    "EnableEndpointRateLimiting": true,
    "StackBlockedRequests": false,
    "RealIpHeader": "X-Forwarded-For",
    "ClientIdHeader": "X-ClientId",
    "HttpStatusCode": 429,
    "IpWhitelist": [ "127.0.0.1", "::1/10", "192.168.0.0/24", "172.16.0.0/12" ],
    "EndpointWhitelist": [ "*:/api/v1/status" ],
    "ClientWhitelist": [ ],
    "GeneralRules": [
      {
        "Endpoint": "*",
        "Period": "1s",
        "Limit": 3
      },
      {
        "Endpoint": "*",
        "Period": "15m",
        "Limit": 300
      },
      {
        "Endpoint": "*",
        "Period": "12h",
        "Limit": 1000
      },
      {
        "Endpoint": "*",
        "Period": "7d",
        "Limit": 10000
      }
    ]
  }
}
